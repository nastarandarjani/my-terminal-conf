{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:catppuccin_blue",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }}",
          "type": "path"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:catppuccin_pink",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": false,
            "branch_icon": " ",

            "branch_ahead_icon": "⇣",
            "branch_behind_icon": "⇡"
          },
          "template": "{{ .HEAD }}{{ if gt .Behind 0 }} {{ .BranchBehindIcon }}{{ .Behind }}{{ end }}{{ if gt .Ahead 0 }}{{ .BranchAheadIcon }}{{ .Ahead }}{{ end }}{{ if gt .StashCount 0 }} *{{ .StashCount }}{{ end }}{{ if .Merge }} merge{{ end }}{{ if gt .Working.Unmerged 0 }} ~{{ .Working.Unmerged }}{{ end }}{{ if gt .Staging.Added 0 }} +{{ .Staging.Added }}{{ end }}{{ if gt .Working.Modified 0 }} !{{ .Working.Modified }}{{ end }}{{ if gt .Working.Untracked 0 }} ?{{ .Working.Untracked }}{{ end }}"
      }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:catppuccin_mauve",
          "properties": {
            "threshold": 500,
            "style": "round"
          }
        },
        {
          "properties": {
            "display_mode": "always"
          },
          "template": "{{ .Venv }}",
          "foreground": "p:catppuccin_lavender",
          "type": "python",
          "style": "plain"
        },
        {
          "properties": {
            "time_format": "15:04"
          },
          "foreground": "p:catppuccin_peach",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "alignment": "left",
      "type": "prompt",
      "newline": true,
      "segments": [
      {
        "template": "❯",
        "foreground_templates": [
          "{{ if gt .Code 0 }}p:catppuccin_red{{ end }}",
          "{{ if eq .Code 0 }}p:catppuccin_green{{ end }}"
        ],
        "type": "text",
        "style": "plain"
      }
      ]
    }
  ],
  "transient_prompt": {
    "template": "{{now | date \"15:04\"}} ❯ ",
    "foreground_templates": [
      "{{ if gt .Code 0 }}p:catppuccin_red{{ end }}",
      "{{ if eq .Code 0 }}p:catppuccin_green{{ end }}"
    ],
    "type": "text",
    "style": "plain"
  },
  "palette": {
    "catppuccin_rosewater" : "#f2d5cf",
    "catppuccin_flamingo" : "#eebebe",
    "catppuccin_pink" : "#f4b8e4",
    "catppuccin_mauve" : "#ca9ee6",
    "catppuccin_red" : "#e78284",
    "catppuccin_maroon" : "#ea999c",
    "catppuccin_peach" : "#ef9f76",
    "catppuccin_yellow" : "#e5c890",
    "catppuccin_green" : "#a6d189",
    "catppuccin_teal" : "#81c8be",
    "catppuccin_sky" : "#99d1db",
    "catppuccin_sapphire" : "#85c1dc",
    "catppuccin_blue" : "#8caaee",
    "catppuccin_lavender" : "#babbf1",
    "catppuccin_text" : "#c6d0f5",
    "catppuccin_subtext1" : "#b5bfe2",
    "catppuccin_subtext0" : "#a5adce",
    "catppuccin_overlay2" : "#949cbb",
    "catppuccin_overlay1" : "#838ba7",
    "catppuccin_overlay0" : "#737994",
    "catppuccin_surface2" : "#626880",
    "catppuccin_surface1" : "#51576d",
    "catppuccin_surface0" : "#414559",
    "catppuccin_base" : "#303446",
    "catppuccin_mantle" : "#292c3c",
    "catppuccin_crust" : "#232634"
  },
  "version": 3,
  "final_space": true
}
